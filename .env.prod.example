# Production Environment Configuration
# Copy this file to .env.prod and customize with your production values

# Django Configuration
DJANGO_DEBUG=False
SECRET_KEY=your-production-secret-key-here-must-be-secure
JWT_SECRET_KEY=your-production-jwt-secret-key-here-must-be-secure
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration (PostgreSQL)
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_secure_prod_db_password
POSTGRES_HOST=your_prod_db_host
POSTGRES_PORT=5432
POSTGRES_DB=your_prod_database_name

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379/0

# Web Server
WEB_PORT=8000

# Project Information
PROJECT_NAME=Your Production App Name
PROJECT_DESCRIPTION=Your production app description
PROJECT_VERSION=1.0.0

# Contact Information
CONTACT_NAME=Your Production Team
CONTACT_EMAIL=support@your-domain.com
CONTACT_URL=https://your-domain.com

# Email Configuration (Production SMTP)
EMAIL_HOST=your-smtp-host.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password
EMAIL_FRONTEND_DOMAIN=https://your-domain.com

# Theme Colors
THEME_PRIMARY_COLOR=#your-primary-color
THEME_ACCENT_COLOR=#your-accent-color

# Environment
DJANGO_ENV=prod
DJANGO_SETTINGS_MODULE=config.django.production
