# Test Environment Configuration
# Copy this file to .env.test and customize as needed

# Django Configuration
DJANGO_DEBUG=False
SECRET_KEY=test-secret-key-for-testing-only
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only
ALLOWED_HOSTS=testserver

# Database Configuration (SQLite for testing)
# Note: For testing, you might want to use SQLite instead of PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=drf_starter_test

# Redis Configuration (Local Redis for testing)
REDIS_URL=redis://localhost:6379/1

# Web Server
WEB_PORT=8001

# Project Information
PROJECT_NAME=DRF Starter Test
PROJECT_DESCRIPTION=Test environment for DRF starter project
PROJECT_VERSION=1.0.0-test

# Contact Information
CONTACT_NAME=Test Team
CONTACT_EMAIL=test@example.com
CONTACT_URL=https://test.example.com

# Email Configuration (Test - use console backend)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_FRONTEND_DOMAIN=http://test.example.com

# Theme Colors
THEME_PRIMARY_COLOR=#6a0dad
THEME_ACCENT_COLOR=#4b0082

# Environment
DJANGO_ENV=test
DJANGO_SETTINGS_MODULE=config.django.test
