# Local Development Environment Configuration
# Copy this file to .env.local and customize as needed

# Django Configuration
DJANGO_DEBUG=True
SECRET_KEY=your-local-secret-key-here-change-in-production
JWT_SECRET_KEY=your-local-jwt-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=drf_starter

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Web Server
WEB_PORT=8000

# Project Information
PROJECT_NAME=Katesthe-core
PROJECT_DESCRIPTION=A Django REST Framework starter project with ready-to-use authentication, custom user management, and modular app structure.
PROJECT_VERSION=1.0.0

# Contact Information
CONTACT_NAME=Katesthe-core Dev Team
CONTACT_EMAIL=support@katesthe-core.com
CONTACT_URL=https://github.com/katesthe-core

# Email Configuration (Local development - use MailHog or similar)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_FRONTEND_DOMAIN=http://localhost:8000

# Theme Colors
THEME_PRIMARY_COLOR=#6a0dad
THEME_ACCENT_COLOR=#4b0082

# Environment
DJANGO_ENV=local
DJANGO_SETTINGS_MODULE=config.django.local
DATABASE_URL=postgresql://postgres:postgres@db:5432/drf_starter

# =============================================================================
# PyInstrument Profiling Configuration
# =============================================================================
PROFILING_ENABLED=True
PYINSTRUMENT_ENABLED=True
PYINSTRUMENT_PROFILE_DIR=profiles
PYINSTRUMENT_ALWAYS_PROFILE=True
PYINSTRUMENT_SHOW_TOOLBAR=True
PYINSTRUMENT_USE_SIGNAL=False

# =============================================================================
# Docker Compose Profiling Service
# =============================================================================
PROFILING_PORT=8101
PROFILING_CONTAINER_NAME=web_profiling

# =============================================================================
# Profiling Management Command Defaults
# =============================================================================
PROFILING_CONFIG_FILE=profiling_config.json
PROFILING_BASE_URL=http://127.0.0.1:8101
PROFILING_CONCURRENT_REQUESTS=3
PROFILING_REQUESTS_PER_ENDPOINT=2
PROFILING_AUTH_EMAIL=admin@katesthe-core.com
PROFILING_AUTH_PASSWORD=admin
PROFILING_SERVE_PORT=8080
PROFILING_SERVE_LIMIT=20
PROFILING_SERVE_SORT=time
PROFILING_ANALYZE_LIMIT=20
PROFILING_ANALYZE_SORT=time
PROFILING_CLEAN_DAYS=7
